<div class="container">
  <h1>List of Articles</h1>

  <div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container=> false %>
  </div>

  <% @categories.each do |category| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="card text-center shadow mb-4 bg-white rounded">

          <div class="card-body">
            <h5 class="card-title">
              <%= link_to category.name, category_path(category) %>
            </h5>

            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>

          </div>

          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago,
                last updated: <%= time_ago_in_words(category.updated_at) %> ago
            </small>
          </div>

        </div>
      </div>
    </div>
    <% end %>


      <div class="flickr_pagination">
        <%= will_paginate @categories, :container=> false %>
      </div>



      <p>
        <%= link_to 'Go to the home page' , root_path, class: 'btn btn-secondary' %>
      </p>
</div>