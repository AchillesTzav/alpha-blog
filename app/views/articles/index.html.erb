<div class="container">
  <h1>List of Articles</h1>

  <p><%= link_to 'Create New Article', new_article_path, class: 'btn btn-primary' %></p>

  <table class="table table-hover">

    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">By</th>
        <th scope="col" colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
       <% @articles.each do |article|%>
      <tr>
        <td><%= article.title%></td>
        <td class=" text-truncate" style="max-width: 150px;" ><%= article.description %></td>
        <td><%= link_to article.user.username, user_path(article.user) if article.user %></td>
        <td><%= link_to 'Show', article_path(article), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-info'%></td>
        <td><%= link_to 'Delete', article_path(article), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <p><%= link_to 'Go to the home page', root_path, class: 'btn btn-secondary'  %></p>
</div>
